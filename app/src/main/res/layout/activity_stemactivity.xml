<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".STEMActivity"
    android:background="#697775">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mStemTitle"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:inputType="textPersonName"
            android:shadowColor="@color/black"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="Available STEM Scholarships"
            android:textColor="#9C27B0"
            android:textSize="45px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/uon_scrollview" />
        </LinearLayout>

        <Button
            android:id="@+id/mBtnUonStem"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#9C27B0"
            android:text="UON STEM Scholarships (Undergraduate)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="295dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tuk_scrollview" />
        </LinearLayout>

        <Button
            android:id="@+id/mBtnTukStem"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#9C27B0"
            android:text="TUK STEM Scholarships" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="326dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ku_scrollview" />
        </LinearLayout>

        <Button
            android:id="@+id/mBtnKuStem"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#9C27B0"
            android:text="Kenyatta University STEM Scholarships" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="245dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/jkuat_scrollview" />
        </LinearLayout>

        <Button
            android:id="@+id/mBtnJkuatStem"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#9C27B0"
            android:text="JKUAT STEM Scholarships" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="361dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/strathmore_scrollview" />
        </LinearLayout>

        <Button
            android:id="@+id/mBtnStrathmoreStem"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#9C27B0"
            android:text="Strathmore University Scholarships" />

    </LinearLayout>
</ScrollView>